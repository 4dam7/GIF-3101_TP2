<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.abacus.AbacusFragment">

    <TextView
        android:id="@+id/abacus_first_slider_left_value_text"
        style="@style/AbacusSliderText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:text="1"
        app:layout_constraintBottom_toBottomOf="@id/abacus_first_slider"
        app:layout_constraintRight_toLeftOf="@id/abacus_first_slider"
        app:layout_constraintTop_toTopOf="@id/abacus_first_slider" />

    <com.google.android.material.slider.Slider
        android:id="@+id/abacus_first_slider"
        style="@style/Slider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="48dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="48dp"
        android:stepSize="1"
        android:valueFrom="1"
        android:valueTo="9"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/abacus_first_slider_right_value_text"
        style="@style/AbacusSliderText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9"
        app:layout_constraintBottom_toBottomOf="@id/abacus_first_slider"
        app:layout_constraintLeft_toRightOf="@id/abacus_first_slider"
        app:layout_constraintTop_toTopOf="@id/abacus_first_slider" />

    <TextView
        android:id="@+id/abacus_first_slider_value_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Valeur: "
        app:layout_constraintLeft_toLeftOf="@id/abacus_first_slider"
        app:layout_constraintTop_toBottomOf="@id/abacus_first_slider" />
    <TextView
        android:id="@+id/abacus_first_slider_value_label_placeholder"
        style="@style/AbacusSliderText"
        android:textColor="#151515"
        android:textSize="14dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="X"
        app:layout_constraintLeft_toRightOf="@id/abacus_first_slider_value_label"
        app:layout_constraintTop_toBottomOf="@id/abacus_first_slider"/>


    <TextView
        android:id="@+id/abacus_second_slider_left_value_text"
        style="@style/AbacusSliderText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:text="2"
        app:layout_constraintBottom_toBottomOf="@id/abacus_second_slider"
        app:layout_constraintRight_toLeftOf="@id/abacus_second_slider"
        app:layout_constraintTop_toTopOf="@id/abacus_second_slider" />

    <com.google.android.material.slider.Slider
        android:id="@+id/abacus_second_slider"
        style="@style/Slider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="48dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="48dp"
        android:stepSize="1"
        android:valueFrom="2"
        android:valueTo="12"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@id/abacus_first_slider_value_label" />

    <TextView
        android:id="@+id/abacus_second_slider_right_value_text"
        style="@style/AbacusSliderText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12"
        app:layout_constraintBottom_toBottomOf="@id/abacus_second_slider"
        app:layout_constraintLeft_toRightOf="@id/abacus_second_slider"
        app:layout_constraintTop_toTopOf="@id/abacus_second_slider" />

    <TextView
        android:id="@+id/abacus_second_slider_value_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Valeur: "
        app:layout_constraintLeft_toLeftOf="@id/abacus_second_slider"
        app:layout_constraintTop_toBottomOf="@id/abacus_second_slider" />
    <TextView
        android:id="@+id/abacus_second_slider_value_label_placeholder"
        style="@style/AbacusSliderText"
        android:textColor="#151515"
        android:textSize="14dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="X"
        app:layout_constraintLeft_toRightOf="@id/abacus_second_slider_value_label"
        app:layout_constraintTop_toBottomOf="@id/abacus_second_slider"/>



    <View
        android:id="@+id/result_separator"
        style="@style/Divider"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/abacus_second_slider_value_label"
        tools:ignore="MissingConstraints" />


    <TextView
        android:id="@+id/abacus_result_slider_left_value_text"
        style="@style/AbacusSliderText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:text="2"
        android:textColor="#151515"
        app:layout_constraintBottom_toBottomOf="@id/abacus_result_slider"
        app:layout_constraintRight_toLeftOf="@id/abacus_result_slider"
        app:layout_constraintTop_toTopOf="@id/abacus_result_slider" />

    <com.google.android.material.slider.Slider
        android:id="@+id/abacus_result_slider"
        style="@style/SliderResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="48dp"
        android:layout_marginTop="30dp"
        android:enabled="false"
        android:layout_marginRight="48dp"
        android:stepSize="1"
        android:valueFrom="2"
        android:valueTo="108"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@id/result_separator" />

    <TextView
        android:id="@+id/abacus_result_slider_right_value_text"
        style="@style/AbacusSliderText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="108"
        android:textColor="#151515"
        app:layout_constraintBottom_toBottomOf="@id/abacus_result_slider"
        app:layout_constraintLeft_toRightOf="@id/abacus_result_slider"
        app:layout_constraintTop_toTopOf="@id/abacus_result_slider" />

    <TextView
        android:id="@+id/abacus_result_slider_value_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Valeur: "
        app:layout_constraintLeft_toLeftOf="@id/abacus_result_slider"
        app:layout_constraintTop_toBottomOf="@id/abacus_result_slider" />
    <TextView
        android:id="@+id/abacus_result_slider_value_label_placeholder"
        style="@style/AbacusSliderText"
        android:textColor="#151515"
        android:textSize="14dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="X"
        app:layout_constraintLeft_toRightOf="@id/abacus_result_slider_value_label"
        app:layout_constraintTop_toBottomOf="@id/abacus_result_slider"/>


</androidx.constraintlayout.widget.ConstraintLayout>